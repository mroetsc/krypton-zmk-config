#include "krypton-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };
};

/ {
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
    };
};

/ {
    default_transform_0: default_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;
        // Left Half                                               Right Half
        // ┌──────┬──────┬──────┬──────┬──────┬──────┐             ┌──────┬──────┬──────┬──────┬──────┬──────┐
        // │      │ L0C1 │ L0C2 │ L0C3 │ L0C4 │ L0C5 │             │ R0C1 │ R0C2 │ R0C3 │ R0C4 │ R0C5 │ R0C6 │
        // │ L1C0 │ L1C1 │ L1C2 │ L1C3 │ L1C4 │ L1C5 │             │ R1C1 │ R1C2 │ R1C3 │ R1C4 │ R1C5 │ R1C6 │
        // │ L2C0 │ L2C1 │ L2C2 │ L2C3 │ L2C4 │ L2C5 │ L2C6 │ R2C0 │ R2C1 │ R2C2 │ R2C3 │ R2C4 │ R2C5 │ R2C6 │
        // │ L3C0 │ L3C1 │ L3C2 │ L3C3 │ L3C4 │ L3C5 │ ENC1 │ ENC2 │ R3C1 │ R3C2 │ R3C3 │ R3C4 │ R3C5 │ R3C6 │
        //                             │ LT1  │ LT2  │ LT3  │ RT1  │ RT2  │ RT3  │ RT4  │

        map = <
                    RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,12) RC(0,11) RC(0,10) RC(0,9) RC(0,8)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,13) RC(1,12) RC(1,11) RC(1,10) RC(1,9) RC(1,8)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,13) RC(2,12) RC(2,11) RC(2,10) RC(2,9) RC(2,8)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,13) RC(3,12) RC(3,11) RC(3,10) RC(3,9) RC(3,8)
                                            RC(4,4) RC(4,5) RC(4,6) RC(4,9) RC(4,8) RC(4,7)
        >;
    };
};

/ {
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <20>; // as per: https://keycapsss.com/Rotary-Encoder-with-switch-EC11/KC10028-FS
        status = "disabled";
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <20>; // as per: https://keycapsss.com/Rotary-Encoder-with-switch-EC11/KC10028-FS
        status = "disabled";
    };

    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
};
